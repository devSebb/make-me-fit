<div class="container mx-auto px-4 py-8" data-controller="nutrition">
  <h1 class="text-3xl font-bold mb-6 text-gray-800">Your Personalized Meal Plan</h1>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="px-6 py-4">
      <h2 class="text-xl font-semibold mb-4 text-gray-700">Weekly Nutrition Plan</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <% @nutrition_plan.split('---').each do |day| %>
          <% day_title, *sections = day.strip.split("\n\n") %>
          <div class="bg-gray-100 p-4 rounded-lg mb-4">
            <h3 class="font-bold text-xl mb-4"><%= day_title.gsub('**', '') %></h3>
            <% sections.each do |section| %>
              <% section_title, *items = section.split("\n") %>
              <div class="mb-4">
                <h4 class="font-semibold text-lg mb-2"><%= section_title.gsub('**', '') %></h4>
                <ul class="list-disc pl-5">
                  <% items.each do |item| %>
                    <li><%= item.gsub(/^- /, '') %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%= content_tag(:div,
    '',
    id: "nutrition-plan-data",
    data: { nutrition_plan: @nutrition_plan.to_json },
    style: "display: none;") %>
</div>
