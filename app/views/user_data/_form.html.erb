<%= form_with(model: user_data, local: true) do |form| %>
  <%= hidden_field_tag :step, step %>

  <%= render partial: "step#{step}", locals: { form: form } %>

  <% if step > 1 %>
    <%= link_to "Back", new_user_datum_path(step: step - 1), class: 'back-button' %>
  <% end %>

  <%= form.submit step == 3 ? "Create" : "Next Step", class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4' %>
<% end %>
