<div class="container mx-auto my-8 p-6 shadow-lg rounded-lg bg-white w-full md:w-1/3" style="box-shadow: 0 0 15px 5px rgba(116, 43, 150, 0.8);">
  <div class="field mb-4">
    <%= form.label :food_preferences, style: "display: block" %>
    <%= form.text_field :food_preferences, class: "rounded-lg focus:ring-2 focus:ring-purple-800 w-full" %>
  </div>
  <div class="field mb-4">
    <%= form.label :count_meals, style: "display: block" %>
    <%= form.number_field :count_meals, class: "rounded-lg focus:ring-2 focus:ring-purple-800 w-full" %>
  </div>
  <div class="field mb-4">
    <%= form.label :snacks, style: "display: block" %>
    <%= form.check_box :snacks, class: "rounded-lg focus:ring-2 focus:ring-purple-800" %>
    <%= form.label :snacks, "Yes" %>
  </div>
  <div class="mt-4 flex justify-between">
    <%= link_to "Back", new_user_datum_path(step: 2), class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
    <%= form.submit "Create", class: 'bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
  <%= form.hidden_field :age %>
  <%= form.hidden_field :gender %>
  <%= form.hidden_field :current_weight %>
  <%= form.hidden_field :activity_level %>
  <%= form.hidden_field :workout_type %>
  <%= form.hidden_field :fitness_goal %>
</div>
