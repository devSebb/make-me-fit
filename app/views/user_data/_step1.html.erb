<div class="container mx-auto my-8 p-6 shadow-lg rounded-lg bg-white w-full md:w-1/3" style="box-shadow: 0 0 15px 5px rgba(116, 43, 150, 0.8);">
  <div class="field mb-4">
    <%= form.label :age, style: "display: block" %>
    <%= form.number_field :age, class: "rounded-lg focus:ring-2 focus:ring-purple-800 w-full" %>
  </div>
  <div class="field mb-4">
    <%= form.label :gender, style: "display: block" %>
    <%= form.select :gender, options_for_select([['Male', 'Male'], ['Female', 'Female']]), class: "rounded-lg focus:ring-2 focus:ring-purple-800 w-full" %>
  </div>
  <div class="field mb-4">
    <%= form.label "Current Weight (kg)", style: "display: block" %>
    <%= form.number_field :current_weight, class: "rounded-lg focus:ring-2 focus:ring-purple-800 w-full" %>
  </div>
  <div class="mt-4 flex justify-end">
    <%= form.submit "Next Step", class: 'bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
</div>
