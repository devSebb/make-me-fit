<div class="container mx-auto my-8 p-6 shadow-lg rounded-lg bg-white w-full md:w-1/3" style="box-shadow: 0 0 15px 5px rgba(116, 43, 150, 0.8);">
  <h2 class="text-2xl font-bold text-center text-purple-700 mb-4">Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-4">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-lg focus:ring-2 focus:ring-purple-800 w-full" %>
    </div>

    <div class="field mb-4">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "rounded-lg focus:ring-2 focus:ring-purple-800 w-full" %>
    </div>

    <div class="field mb-4">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded-lg focus:ring-2 focus:ring-purple-800 w-full" %>
    </div>

    <div class="actions text-center">
      <%= f.submit "Sign up", class: "transition duration-300 ease-in-out bg-transparent text-purple-700 border border-purple-700 hover:bg-purple-800 hover:text-white py-2 px-4 rounded-lg" %>
    </div>
  <% end %>
  <div class="text-center flex flex-col ">or
    <%= render "devise/shared/links" %>
  </div>
</div>
